<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:extension="clr-namespace:Madplan.Extensions"
             xmlns:local="clr-namespace:Madplan.Models"
             x:Class="Madplan.Views.DayPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Primary" Text="Clear" Clicked="Clear_Clicked"/>
    </ContentPage.ToolbarItems>

    <TableView>
        <TableRoot>
            <TableSection Title="Morgenmad">
                <extension:NavigateNextCell Label="{Binding Breakfast}" Tapped="SelectMeal_Tapped" ClassId="{x:Static local:DishType.Breakfast}"/>
            </TableSection>
            <TableSection Title="Mellemmåltid">
                <extension:NavigateNextCell Label="{Binding FirstSnack}" Tapped="SelectMeal_Tapped" ClassId="{x:Static local:DishType.FirstSnack}"/>
            </TableSection>
            <TableSection Title="Frokost">
                <extension:NavigateNextCell Label="{Binding Lunch}" Tapped="SelectMeal_Tapped" ClassId="{x:Static local:DishType.Lunch}"/>
            </TableSection>
            <TableSection Title="Mellemmåltid">
                <extension:NavigateNextCell Label="{Binding SecondSnack}" Tapped="SelectMeal_Tapped" ClassId="{x:Static local:DishType.SecondSnack}"/>
            </TableSection>
            <TableSection Title="Aftensmad">
                <extension:NavigateNextCell Label="{Binding Dinner}" Tapped="SelectMeal_Tapped" ClassId="{x:Static local:DishType.Dinner}"/>
            </TableSection>
        </TableRoot>
    </TableView>
    
</ContentPage>