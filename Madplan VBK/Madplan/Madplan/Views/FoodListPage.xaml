<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Madplan.Views.FoodListPage">

    <StackLayout>
        <SearchBar Placeholder="Søg..." TextChanged="SearchBar_TextChanged"/>
        <ListView x:Name="listview">
            <ListView.Header>
                <StackLayout Style="{StaticResource listViewHeaderLayoutStyle}">
                    <Label Text="Oversigt over fødevarer" Style="{StaticResource listViewHeaderLabelStyle}" />
                </StackLayout>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Navn}" Tapped="ListViewItem_Tapped">
                        <TextCell.ContextActions>
                            <MenuItem Text="Rediger"/>
                            <MenuItem Text="Slet" IsDestructive="True"/>
                        </TextCell.ContextActions>
                    </TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>