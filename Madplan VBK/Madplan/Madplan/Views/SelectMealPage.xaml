<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Madplan.Views.SelectMealPage">

    <ListView ItemsSource="{Binding}">
        <ListView.Header>
            <StackLayout Padding="0, 10" BackgroundColor="Gray">
                <Label x:Name="label" FontAttributes="Bold"  VerticalTextAlignment="Center" Margin="15, 0, 10, 0"/>
            </StackLayout>
        </ListView.Header>
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell Tapped="ViewCell_Tapped">
                    <StackLayout VerticalOptions="Center">
                        <Label Text="{Binding Name}" Margin="15, 0, 10, 0" />
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    
</ContentPage>