<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Madplan.Extensions.DataEntryCell"
             x:Name="dataEntryCell">

    <StackLayout Orientation="Horizontal" 
                 BindingContext="{x:Reference dataEntryCell}"
                 Style="{StaticResource layoutInAView}">
        <Label Text="{Binding Label}" VerticalOptions="Center"/>
        <Entry Keyboard="{Binding Keyboard}" 
               Text="{Binding Value}" 
               Placeholder="{Binding Placeholder}" 
               IsEnabled="{Binding IsEnabled}" 
               HorizontalOptions="FillAndExpand" 
               HorizontalTextAlignment="End" 
               BackgroundColor="Blue"/>
        <Label Text="{Binding Unit}" VerticalOptions="Center" BackgroundColor="Green"/>
    </StackLayout>

</ViewCell>